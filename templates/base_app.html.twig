<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}
				{{ title|default('Trip Sync') }}
			{% endblock %}
		</title>
		<link
		rel="icon" href="{{ asset('img/TripSync-Logo_simple.png') }}">

		{# Bootstrap 5 CSS (CDN) #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}{% block estilos %}{% endblock %}

		<style>
			html,
			body {
				margin: 0;
				padding: 0;
				background-color: #AED1E6;
				min-height: 100vh;
			}

			/* Fondos personalizados m√≠nimos */
			.fondo_personalizado1 {
				background-color: #CFE8EF;
			}
			.fondo_personalizado2 {
				background-color: #C6DBF0;
			}
			.fondo_personalizado3 {
				background-color: #AED1E6;
			}
			.fondo_personalizado4 {
				background-color: #A0C4E2;
			}
			.fondo_personalizado5 {
				background-color: #85C7DE;
			}
		</style>
	</head>
	<body
		class="d-flex flex-column min-vh-100">

		{# Navbar global #}
		<header>
			{% include 'secciones/_navbar.html.twig' %}
		</header>

		<div id="flash-container">
			{% include 'flash/mensajes.html.twig' %}
		</div>

		<main class="flex-fill py-3 container"> {% block content %}{% endblock %}
			</main>

			<footer class="mt-auto border-top py-3">
				{% include 'secciones/_footer.html.twig' %}
			</footer>

			{% block javascripts %}
				{% block importmap %}
					{{ importmap('app') }}
				{% endblock %}
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
			{% endblock %}
		</body>
	</html>
